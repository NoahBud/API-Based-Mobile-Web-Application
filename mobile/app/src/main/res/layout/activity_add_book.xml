<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_beige">

    <TextView
        android:id="@+id/tvAddBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter un Livre"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <EditText
        android:id="@+id/isbnEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ISBN"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/tvAddBookTitle"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du livre"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/isbnEditText"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/genreEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Genre"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/nameEditText"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/genreEditText"
        android:layout_marginTop="20dp"/>

    <AutoCompleteTextView
        android:id="@+id/authorAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Auteur"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="20dp"/>


    <Spinner
        android:id="@+id/editorSpinner"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:layout_below="@id/authorAutoComplete"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/rounded_button_green" />

    <Spinner
        android:id="@+id/stateSpinner"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:layout_below="@id/editorSpinner"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_green" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/stateSpinner"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>
</RelativeLayout>

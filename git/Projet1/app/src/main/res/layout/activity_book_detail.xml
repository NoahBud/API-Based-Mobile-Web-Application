<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_beige"
    android:padding="16dp">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:background="@drawable/background_box"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/bookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre du Livre"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/backButton"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/bookISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN : 123456789"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/bookName"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auteur : "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/bookISBN"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/bookEditor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Éditeur : "
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/bookAuthor"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/bookBoxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chargement des boîtes..."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/bookEditor"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"
        android:linksClickable="true" />


    <TextView
        android:id="@+id/bookGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre : Fiction"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/bookBoxes"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/bookDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description du livre..."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/bookGenre"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/reserveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sélectionner"
        android:background="@drawable/background_box"
        android:textColor="@android:color/white"
        android:layout_below="@id/bookDescription"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
